{# @ts-nocheck #}
{% extends 'base.html.twig' %}
{% block title %}Finaliser la commande - MooDeek{% endblock %}
{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-6">
        <a href="{{ path('app_panier_index') }}" class="inline-flex items-center text-blue-600 hover:text-blue-800">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Retour au panier
        </a>
    </div>

    <h1 class="text-3xl font-bold mb-8">Finaliser votre commande</h1>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Formulaire de commande -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold mb-6">Informations de commande</h2>
            
            <form method="POST" class="space-y-6">
                <p class="text-sm text-red-600 mb-4">Tous les champs sont obligatoires <span class="font-bold">*</span></p>
                <!-- Adresse de livraison -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Adresse de livraison <span class="text-red-600">*</span></label>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="rue" class="block text-xs font-medium text-gray-600 mb-1">Rue <span class="text-red-600">*</span></label>
                            <input type="text" id="rue" name="rue" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Rue" value="{{ app.user.adresses|first ? app.user.adresses|first.rue : '' }}">
                        </div>
                        <div>
                            <label for="ville" class="block text-xs font-medium text-gray-600 mb-1">Ville <span class="text-red-600">*</span></label>
                            <input type="text" id="ville" name="ville" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Ville" value="{{ app.user.adresses|first ? app.user.adresses|first.ville : '' }}">
                        </div>
                        <div>
                            <label for="code_postal" class="block text-xs font-medium text-gray-600 mb-1">Code postal <span class="text-red-600">*</span></label>
                            <input type="text" id="code_postal" name="code_postal" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Code postal" value="{{ app.user.adresses|first ? app.user.adresses|first.codePostal : '' }}">
                        </div>
                        <div>
                            <label for="pays" class="block text-xs font-medium text-gray-600 mb-1">Pays <span class="text-red-600">*</span></label>
                            <input type="text" id="pays" name="pays" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Pays" value="{{ app.user.adresses|first ? app.user.adresses|first.pays : '' }}">
                        </div>
                    </div>
                </div>



                <!-- Méthode de paiement -->
                <div>
                    <label for="methode_paiement" class="block text-sm font-medium text-gray-700 mb-2">
                        Méthode de paiement <span class="text-red-600">*</span>
                    </label>
                    <select 
                        id="methode_paiement" 
                        name="methode_paiement" 
                        required
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="paiement_livraison">Paiement à la livraison</option>
                    </select>
                </div>

                <!-- Bouton de commande -->
                <button type="submit" 
                        class="w-full bg-blue-600 text-white py-3 px-4 rounded-md hover:bg-blue-700 transition-colors duration-200 font-medium">
                    Confirmer la commande
                </button>
            </form>
        </div>

        <!-- Résumé de la commande -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold mb-6">Résumé de votre commande</h2>
            
            <!-- Articles -->
            <div class="space-y-4 mb-6">
                {% for item in panier_items %}
                    <div class="flex items-center space-x-4 p-4 border border-gray-200 rounded-lg">
                        <div class="flex-shrink-0">
                            <div class="w-12 h-12 bg-gray-200 rounded-lg flex items-center justify-center">
                                {% if item.produit.imageProduit %}
                                    <img src="{{ asset(item.produit.imageProduit) }}" 
                                         alt="{{ item.produit.nomProduit }}" 
                                         class="w-full h-full object-cover rounded-lg">
                                {% else %}
                                    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                {% endif %}
                            </div>
                        </div>
                        
                        <div class="flex-1">
                            <h4 class="font-medium text-gray-900">{{ item.produit.nomProduit }}</h4>
                            {% if item.taille %}
                                <p class="text-sm text-gray-600">Taille: {{ item.taille }}</p>
                            {% endif %}
                            <p class="text-sm text-gray-600">Quantité: {{ item.quantite }}</p>
                        </div>
                        
                        <div class="text-right">
                            <p class="font-semibold text-gray-900">{{ (item.quantite * item.produit.prixUnitaire)|number_format(2) }} TND</p>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Totaux -->
            <div class="border-t border-gray-200 pt-4 space-y-2">
                <div class="flex justify-between">
                    <span class="text-gray-600">Sous-total:</span>
                    <span class="font-medium">{{ calculs.sous_total|number_format(2) }} TND</span>
                </div>
                
                {% if calculs.frais_livraison_montant > 0 %}
                    <div class="flex justify-between">
                        <span class="text-gray-600">Frais de livraison:</span>
                        <span class="font-medium">{{ calculs.frais_livraison_montant|number_format(2) }} TND</span>
                    </div>
                {% endif %}
                
                <div class="flex justify-between text-lg font-bold border-t border-gray-200 pt-2">
                    <span>Total:</span>
                    <span>{{ calculs.total_final|number_format(2) }} TND</span>
                </div>
            </div>

            <!-- Informations supplémentaires -->
            <div class="mt-6 p-4 bg-blue-50 rounded-md">
                <h4 class="font-semibold text-blue-900 mb-2">Informations importantes</h4>
                <ul class="text-sm text-blue-800 space-y-1">
                    <li>• Livraison estimée sous 3-5 jours ouvrés</li>
                    <li>• Vous recevrez un email de confirmation</li>
                    <li>• Suivez votre commande dans votre espace client</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
// @ts-nocheck
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const submitButton = form.querySelector('button[type="submit"]');
    
    form.addEventListener('submit', function(e) {
        // Désactiver le bouton pour éviter les doubles soumissions
        submitButton.disabled = true;
        submitButton.textContent = 'Traitement en cours...';
    });
});
</script>
{% endblock %} 