{% extends 'base.html.twig' %}
{% block title %}Modifier Mon Profil - MooDeek{% endblock %}
{% block body %}
<div class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center justify-between mb-6">
                <h1 class="text-2xl font-bold text-gray-900">Modifier Mon Profil</h1>
                <a href="{{ path('app_profile') }}" class="text-blue-600 hover:text-blue-500">
                    ← Retour au profil
                </a>
            </div>
            {% for message in app.flashes('success') %}
                <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
                    {{ message }}
                </div>
            {% endfor %}
            <form method="post" class="space-y-6">
                {{ form_start(form) }}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Personal Information -->
                    <div>
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Informations Personnelles</h3>
                        <div class="form-field">
                            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 required'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm'}}) }}
                            {{ form_errors(form.nom, {'attr': {'class': 'error-message'}}) }}
                        </div>
                        <div class="form-field">
                            {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 required'}}) }}
                            {{ form_widget(form.prenom, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm'}}) }}
                            {{ form_errors(form.prenom, {'attr': {'class': 'error-message'}}) }}
                        </div>
                        <div class="form-field">
                            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 required'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm'}}) }}
                            {{ form_errors(form.email, {'attr': {'class': 'error-message'}}) }}
                        </div>
                        <div class="form-field">
                            {{ form_label(form.numero_telephone, 'Téléphone', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 required'}}) }}
                            {{ form_widget(form.numero_telephone, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm'}}) }}
                            {{ form_errors(form.numero_telephone, {'attr': {'class': 'error-message'}}) }}
                        </div>
                    </div>
                    <!-- Security -->
                    <div>
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Sécurité</h3>
                        <div class="form-field">
                            {{ form_label(form.mot_de_passe, 'Nouveau mot de passe (laisser vide pour ne pas changer)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.mot_de_passe, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm', 'placeholder': 'Laissez vide pour ne pas changer'}}) }}
                            {{ form_errors(form.mot_de_passe, {'attr': {'class': 'error-message'}}) }}
                            <p class="mt-1 text-sm text-gray-500">Le mot de passe doit contenir au moins 8 caractères, une majuscule, une minuscule, un chiffre et un caractère spécial.</p>
                        </div>
                    </div>
                </div>
                <!-- Address Information -->
                <div>
                    <h3 class="text-lg font-medium text-gray-900 mb-4">Adresse de Facturation</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        {% for adresse in form.adresses %}
                            <div class="form-field">
                                {{ form_label(adresse.rue, 'Rue', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 required'}}) }}
                                {{ form_widget(adresse.rue, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm'}}) }}
                                {{ form_errors(adresse.rue, {'attr': {'class': 'error-message'}}) }}
                            </div>
                            <div class="form-field">
                                {{ form_label(adresse.ville, 'Ville', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 required'}}) }}
                                {{ form_widget(adresse.ville, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm'}}) }}
                                {{ form_errors(adresse.ville, {'attr': {'class': 'error-message'}}) }}
                            </div>
                            <div class="form-field">
                                {{ form_label(adresse.code_postal, 'Code Postal', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 required'}}) }}
                                {{ form_widget(adresse.code_postal, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm'}}) }}
                                {{ form_errors(adresse.code_postal, {'attr': {'class': 'error-message'}}) }}
                            </div>
                            <div class="form-field">
                                {{ form_label(adresse.pays, 'Pays', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 required'}}) }}
                                {{ form_widget(adresse.pays, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm'}}) }}
                                {{ form_errors(adresse.pays, {'attr': {'class': 'error-message'}}) }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="flex justify-end space-x-3">
                    <a href="{{ path('app_profile') }}" class="bg-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-400">
                        Annuler
                    </a>
                    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">
                        Sauvegarder
                    </button>
                </div>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>
{% endblock %} 