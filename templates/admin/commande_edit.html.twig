{% extends 'base.html.twig' %}
{% block title %}Éditer Commande #{{ commande.id }}{% endblock %}
{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-6">Éditer Commande #{{ commande.id }}</h1>
    <a href="{{ path('admin_commandes') }}" class="mb-4 inline-block px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400">Retour à la liste</a>
    <form method="post" class="bg-white rounded-lg shadow-md p-6 max-w-lg mx-auto">
        <div class="mb-4">
            <label class="block font-semibold mb-1">Statut de la commande</label>
            <select name="statut_commande" class="w-full px-3 py-2 border rounded">
                <option value="en_attente" {% if commande.statutCommande == 'en_attente' %}selected{% endif %}>En attente</option>
                <option value="confirmée" {% if commande.statutCommande == 'confirmée' %}selected{% endif %}>Confirmée</option>
                <option value="expédiée" {% if commande.statutCommande == 'expédiée' %}selected{% endif %}>Expédiée</option>
                <option value="livrée" {% if commande.statutCommande == 'livrée' %}selected{% endif %}>Livrée</option>
                <option value="annulée" {% if commande.statutCommande == 'annulée' %}selected{% endif %}>Annulée</option>
            </select>
        </div>
        <div class="mb-4">
            <label class="block font-semibold mb-1">Adresse de livraison</label>
            <input type="text" name="adresse_livraison" class="w-full px-3 py-2 border rounded" value="{{ commande.adresseLivraison }}">
        </div>
        <div class="mb-4">
            <label class="block font-semibold mb-1">Méthode de paiement</label>
            <select name="methode_paiement" class="w-full px-3 py-2 border rounded">
                <option value="carte_bancaire" {% if commande.methodePaiement == 'carte_bancaire' %}selected{% endif %}>Carte bancaire</option>
                <option value="paypal" {% if commande.methodePaiement == 'paypal' %}selected{% endif %}>PayPal</option>
                <option value="virement" {% if commande.methodePaiement == 'virement' %}selected{% endif %}>Virement</option>
            </select>
        </div>
        <div class="flex justify-end">
            <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Enregistrer</button>
        </div>
    </form>
</div>
{% endblock %} 