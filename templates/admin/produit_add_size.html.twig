{% extends 'base.html.twig' %}
{% block title %}Ajouter une taille à {{ produit.nomProduit }}{% endblock %}
{% block body %}
<div class="container mx-auto py-8 px-4">
    <div class="bg-white p-8 rounded-lg shadow max-w-lg mx-auto">
        <h1 class="text-2xl font-bold mb-6 text-center">Ajouter une taille à {{ produit.nomProduit }}</h1>
        <a href="{{ path('admin_produits') }}" class="mb-4 inline-block px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 font-semibold">Retour à la liste des produits</a>
        {% if error %}
            <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">{{ error }}</div>
        {% endif %}
        <form method="post" class="space-y-6">
            <div>
                <label for="size" class="block text-sm font-medium text-gray-700 mb-1">Taille</label>
                <select name="size" id="size" class="block w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">-- Choisir --</option>
                    <option value="XS">XS</option>
                    <option value="S">S</option>
                    <option value="M">M</option>
                    <option value="L">L</option>
                    <option value="XL">XL</option>
                    <option value="XXL">XXL</option>
                </select>
            </div>
            <div>
                <label for="quantite" class="block text-sm font-medium text-gray-700 mb-1">Quantité</label>
                <input type="number" name="quantite" id="quantite" min="0" class="block w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" required>
            </div>
            <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 font-semibold">Ajouter</button>
        </form>
    </div>
</div>
{% endblock %} 