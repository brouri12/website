{% extends 'base.html.twig' %}
{% block title %}Détail du client{% endblock %}
{% block body %}
<div class="container mx-auto px-4 py-8 max-w-2xl">
    <h1 class="text-2xl font-bold mb-6">Détail du client</h1>
    <a href="{{ path('admin_clients') }}" class="mb-4 inline-block px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400">Retour à la liste</a>
    <a href="{{ path('admin_dashboard') }}" class="mb-4 ml-2 inline-block px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400">Dashboard</a>
    <div class="bg-white rounded shadow p-6">
        <p><strong>Nom :</strong> {{ client.nom }} {{ client.prenom }}</p>
        <p><strong>Email :</strong> {{ client.email }}</p>
        <p><strong>Téléphone :</strong> {{ client.numeroTelephone }}</p>
        <p><strong>Date inscription :</strong> {{ client.dateInscription ? client.dateInscription|date('d/m/Y') : '' }}</p>
        <p><strong>Adresse :</strong> {{ client.adresse }}</p>
        <p><strong>Statut :</strong> {{ client.statutCompte }}</p>
    </div>
</div>
{% endblock %} 