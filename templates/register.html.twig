<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription - MooDeek</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .error-message {
            color: #dc2626;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
        .form-field {
            margin-bottom: 1rem;
        }
        .required::after {
            content: " *";
            color: #dc2626;
        }
        .password-strength {
            margin-top: 0.5rem;
            font-size: 0.75rem;
        }
        .strength-weak { color: #dc2626; }
        .strength-medium { color: #f59e0b; }
        .strength-strong { color: #059669; }
    </style>
</head>
<body class="bg-gray-100 font-sans">
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-6xl mx-auto">
            <h2 class="text-3xl font-bold text-center mb-8 text-gray-800">Inscription</h2>
            
            <!-- Flash Messages -->
            {% if app.request.method == 'POST' %}
                {% for message in app.flashes('success') %}
                    <div class="max-w-md mx-auto mb-6 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
                        {{ message }}
                    </div>
                {% endfor %}
                
                {% for message in app.flashes('error') %}
                    <div class="max-w-md mx-auto mb-6 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endif %}
            
            <div class="bg-white p-8 rounded-lg shadow-md">
                {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                    
                    <!-- Layout en deux colonnes -->
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                        
                        <!-- Colonne gauche : Informations personnelles et Sécurité -->
                        <div class="space-y-6">
                            
                            <!-- Informations personnelles -->
                            <div class="border-b border-gray-200 pb-6">
                                <h3 class="text-lg font-semibold mb-4 text-gray-800">Informations personnelles</h3>
                                
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div class="form-field">
                                        {{ form_label(registrationForm.nom, 'Nom', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2 required'}}) }}
                                        {{ form_widget(registrationForm.nom, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500'}}) }}
                                        {{ form_errors(registrationForm.nom, {'attr': {'class': 'error-message'}}) }}
                                    </div>
                                    
                                    <div class="form-field">
                                        {{ form_label(registrationForm.prenom, 'Prénom', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2 required'}}) }}
                                        {{ form_widget(registrationForm.prenom, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500'}}) }}
                                        {{ form_errors(registrationForm.prenom, {'attr': {'class': 'error-message'}}) }}
                                    </div>
                                </div>
                                
                                <div class="form-field">
                                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2 required'}}) }}
                                    {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500'}}) }}
                                    {{ form_errors(registrationForm.email, {'attr': {'class': 'error-message'}}) }}
                                </div>
                                
                                <div class="form-field">
                                    {{ form_label(registrationForm.numero_telephone, 'Numéro de téléphone', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2 required'}}) }}
                                    {{ form_widget(registrationForm.numero_telephone, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500'}}) }}
                                    {{ form_errors(registrationForm.numero_telephone, {'attr': {'class': 'error-message'}}) }}
                                    <p class="text-xs text-gray-500 mt-1">Format tunisien : 8 chiffres (ex: 71234567) ou +21671234567</p>
                                </div>
                            </div>
                            
                            <!-- Mot de passe -->
                            <div class="border-b border-gray-200 pb-6">
                                <h3 class="text-lg font-semibold mb-4 text-gray-800">Sécurité</h3>
                                
                                <div class="form-field">
                                    {{ form_label(registrationForm.mot_de_passe.first, 'Mot de passe', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2 required'}}) }}
                                    {{ form_widget(registrationForm.mot_de_passe.first, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500'}}) }}
                                    {{ form_errors(registrationForm.mot_de_passe.first, {'attr': {'class': 'error-message'}}) }}
                                    <div class="password-strength">
                                        <p class="text-gray-600">Le mot de passe doit contenir :</p>
                                        <ul class="text-xs text-gray-500 mt-1">
                                            <li>• Au moins 8 caractères</li>
                                            <li>• Au moins une lettre minuscule</li>
                                            <li>• Au moins une lettre majuscule</li>
                                            <li>• Au moins un chiffre</li>
                                            <li>• Au moins un caractère spécial (!@#$%^&*()_+-=[]{}|;:,.<>?)</li>
                                        </ul>
                                    </div>
                                </div>
                                
                                <div class="form-field">
                                    {{ form_label(registrationForm.mot_de_passe.second, 'Confirmer le mot de passe', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2 required'}}) }}
                                    {{ form_widget(registrationForm.mot_de_passe.second, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500'}}) }}
                                    {{ form_errors(registrationForm.mot_de_passe.second, {'attr': {'class': 'error-message'}}) }}
                                </div>
                            </div>
                        </div>
                        
                        <!-- Colonne droite : Adresse de facturation -->
                        <div>
                            <h3 class="text-lg font-semibold mb-4 text-gray-800">Adresse de facturation</h3>
                            {% for adresseForm in registrationForm.adresses %}
                                <div class="space-y-4">
                                    <div class="form-field">
                                        {{ form_label(adresseForm.rue, 'Rue', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2 required'}}) }}
                                        {{ form_widget(adresseForm.rue, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500'}}) }}
                                        {{ form_errors(adresseForm.rue, {'attr': {'class': 'error-message'}}) }}
                                    </div>
                                    
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        <div class="form-field">
                                            {{ form_label(adresseForm.ville, 'Ville', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2 required'}}) }}
                                            {{ form_widget(adresseForm.ville, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500'}}) }}
                                            {{ form_errors(adresseForm.ville, {'attr': {'class': 'error-message'}}) }}
                                        </div>
                                        
                                        <div class="form-field">
                                            {{ form_label(adresseForm.code_postal, 'Code postal', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2 required'}}) }}
                                            {{ form_widget(adresseForm.code_postal, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500'}}) }}
                                            {{ form_errors(adresseForm.code_postal, {'attr': {'class': 'error-message'}}) }}
                                            <p class="text-xs text-gray-500 mt-1">Format tunisien : 4 chiffres (ex: 1000)</p>
                                        </div>
                                    </div>
                                    
                                    <div class="form-field">
                                        {{ form_label(adresseForm.pays, 'Pays', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2 required'}}) }}
                                        {{ form_widget(adresseForm.pays, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-700 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500'}}) }}
                                        {{ form_errors(adresseForm.pays, {'attr': {'class': 'error-message'}}) }}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    
                    <!-- Bouton de soumission -->
                    <div class="pt-6 border-t border-gray-200">
                        <button type="submit" class="w-full bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200">
                            Créer mon compte
                        </button>
                    </div>
                    
                {{ form_end(registrationForm) }}
                
                <div class="mt-6 text-center">
                    <p class="text-gray-600">
                        Déjà un compte ? 
                        <a href="/login" class="text-blue-600 hover:text-blue-800 font-semibold">Se connecter</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        // Validation en temps réel du mot de passe
        document.addEventListener('DOMContentLoaded', function() {
            const passwordField = document.querySelector('input[name*="[first]"]');
            const confirmField = document.querySelector('input[name*="[second]"]');
            
            if (passwordField && confirmField) {
                function validatePassword() {
                    const password = passwordField.value;
                    const confirm = confirmField.value;
                    
                    // Vérifier la force du mot de passe
                    const hasLower = /[a-z]/.test(password);
                    const hasUpper = /[A-Z]/.test(password);
                    const hasNumber = /\d/.test(password);
                    const hasSpecial = /[@$!%*?&]/.test(password);
                    const hasLength = password.length >= 8;
                    
                    // Mettre à jour les indicateurs visuels
                    const indicators = document.querySelectorAll('.password-strength li');
                    if (indicators.length >= 5) {
                        indicators[0].style.color = hasLength ? '#059669' : '#dc2626';
                        indicators[1].style.color = hasLower ? '#059669' : '#dc2626';
                        indicators[2].style.color = hasUpper ? '#059669' : '#dc2626';
                        indicators[3].style.color = hasNumber ? '#059669' : '#dc2626';
                        indicators[4].style.color = hasSpecial ? '#059669' : '#dc2626';
                    }
                    
                    // Vérifier la correspondance
                    if (confirm && password !== confirm) {
                        confirmField.setCustomValidity('Les mots de passe ne correspondent pas');
                    } else {
                        confirmField.setCustomValidity('');
                    }
                }
                
                passwordField.addEventListener('input', validatePassword);
                confirmField.addEventListener('input', validatePassword);
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            const ctaButton = document.getElementById('ctaButton');
            if (ctaButton) {
                ctaButton.addEventListener('click', function() {
                    window.location.href = "{{ path('shop') }}";
                });
            }
        });
    </script>
</body>
</html>